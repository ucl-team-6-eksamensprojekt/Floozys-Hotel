<UserControl x:Class="Floozys_Hotel.Views.Forms.RoomFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Floozys_Hotel.Views.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1">

            <TextBlock Text="Room Number"/>
            <TextBox Margin="0,4,0,12"
                     Text="{Binding Room.RoomNumber, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Floor"/>
            <TextBox Margin="0,4,0,12"
          Text="{Binding Room.Floor, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Room Size"/>
            <TextBox Margin="0,4,0,12"
          Text="{Binding Room.RoomSize, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Capacity"/>
            <TextBox Margin="0,4,0,12"
          Text="{Binding Room.Capacity, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Status"/>
            <ComboBox Margin="0,4,0,12"
                     SelectedItem="{Binding Room.Status, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content="Available"/>
                <ComboBoxItem Content="Maintanance"/>
                <ComboBoxItem Content="Cleaning"/>
                <ComboBoxItem Content="Disabled"/>
            </ComboBox>


        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Width="80"
                    Margin="0,0,8,0"
                    Command="{Binding CancelCommand}" />
            
            <Button Content="{Binding ButtonText}"
                    Width="80"
                    Command="{Binding SaveCommand}" />


        </StackPanel>

    </Grid>
</UserControl>
