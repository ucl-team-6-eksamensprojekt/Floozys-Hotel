<UserControl
    x:Class="Floozys_Hotel.Views.GuestOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Floozys_Hotel.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Floozys_Hotel.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Top bar -->
            <RowDefinition Height="Auto" /> <!-- In between -->
            <RowDefinition Height="*" />    <!-- Content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            FontSize="30"
            FontWeight="ExtraBold"
            Text="Guest Overview"
            Margin="0,0,30,0"/>

        <!--  Search field & button  -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
            
            <TextBox
                Width="200"
                Height="35"
                Padding="10,0"
                VerticalContentAlignment="Center"
                FontSize="14"
                Text="{Binding SearchGuest, UpdateSourceTrigger=PropertyChanged}"
                VerticalAlignment="Center"
                Margin="0,30,10,0"
                KeyDown="SearchTextBox_KeyDown">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Foreground" Value="Black" />
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush
                                            AlignmentX="Left"
                                            AlignmentY="Center"
                                            Stretch="None">
                                            <VisualBrush.Visual>
                                                <TextBlock
                                                    Margin="10,0,0,0"
                                                    Foreground="Gray"
                                                    Text="🔍 Search by guest..." />
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <Button
                Content="New Guest"
                Command="{Binding NewGuestCommand}"
                Width="120"
                Height="35"
                VerticalAlignment="Center"
                Margin="300,30,10,0"/>
        </StackPanel>

        <!-- Guest List -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Padding="10"
            BorderBrush="LightGray"
            BorderThickness="1"
            Margin="0,0,10,0">
            <ListView
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{Binding Guests}"
                SelectedItem="{Binding SelectedGuest, Mode=TwoWay}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding FirstName}" Header="First name" />
                        <GridViewColumn DisplayMemberBinding="{Binding LastName}" Header="Last name" />
                        <GridViewColumn DisplayMemberBinding="{Binding Country}" Header="Country" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <!-- Guest Details -->
        <Border
            Grid.Row="2"
            Grid.Column="1"
            Padding="10"
            BorderBrush="LightGray"
            BorderThickness="1">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Guest Details" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontStyle="Italic"
                    Foreground="Gray"
                    Text="Fields marked with * are required." />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="100">
                        <Run Foreground="Black" Text="First name" />
                        <Run Foreground="Red" Text="*" />
                    </TextBlock>
                    <TextBox
                        Width="200"
                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding SelectedGuest.FirstName, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="100">
                        <Run Foreground="Black" Text="Last name" />
                        <Run Foreground="Red" Text="*" />
                    </TextBlock>
                    <TextBox
                        Width="200"
                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding SelectedGuest.LastName, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="100">
                        <Run Foreground="Black" Text="Phone" />
                        <Run Foreground="Red" Text="*" />
                    </TextBlock>
                    <TextBox
                        Width="200"
                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding SelectedGuest.PhoneNumber, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="100">
                        <Run Foreground="Black" Text="Email" />
                        <Run Foreground="Red" Text="*" />
                    </TextBlock>
                    <TextBox
                        Width="200"
                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding SelectedGuest.Email, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="100">
                        <Run Foreground="Black" Text="Country" />
                        <Run Foreground="Red" Text="*" />
                    </TextBlock>
                    <TextBox
                        Width="200"
                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding SelectedGuest.Country, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="100" Text="Passport number:" />
                    <TextBox
                        Width="200"
                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                        Text="{Binding SelectedGuest.PassportNumber, Mode=TwoWay}" />
                </StackPanel>
                <Button Content="Edit Guest"
                        Command="{Binding EditGuestCommand}"
                        Margin="0,10,0,0"
                        Width="120"
                        IsEnabled="{Binding SelectedGuest,Converter={StaticResource NotNullToBoolConverter}}"/>
                <Button Content="New Booking"
                        Command="{Binding CreateBookingForGuestCommand}"
                        Margin="0,10,0,0"
                        Width="120"/>
                <Button Content="Clear" 
                        Command="{Binding ClearGuestCommand}" 
                        Margin="0,10,0,0" 
                        Width="120"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
