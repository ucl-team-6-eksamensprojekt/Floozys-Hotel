<Window x:Class="Floozys_Hotel.Views.NewBookingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Floozys_Hotel.Views"
        mc:Ignorable="d"
        Title="New Booking - Floozy's Hotel" 
        Height="800" 
        Width="850"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <!-- 
    MARGIN USAGE PRINCIPLE:
    * We use Grid/StackPanel for structure (where things ARE)
    * We use Margin for spacing (air between things, not toolbox positionering)
    * Toolbox positionering is not easy to maintenain and use according to Jan Brown clip.
    -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Check-in & Check-out DatePickers -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="#C8E6C9" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Check-In Date" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <DatePicker SelectedDate="2025-11-07" 
                                FontSize="18"
                                Height="40"
                                HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" 
                    Background="#C8E6C9" 
                    CornerRadius="8" 
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Check-Out Date" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <DatePicker SelectedDate="2025-11-09" 
                                FontSize="18"
                                Height="40"
                                HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Room Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Pick desired room" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>

            <ListBox Height="160" 
                     FontSize="14"
                     Background="White"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1">
                <ListBoxItem Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#1, 2nd floor, Large Room"/>
                        <TextBlock Grid.Column="1" Text="25.00$" FontWeight="Bold" Margin="10,0,0,0"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#2, 2nd floor, Small Room"/>
                        <TextBlock Grid.Column="1" Text="20.00$" FontWeight="Bold" Margin="10,0,0,0"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#3, 2nd floor, Small Room"/>
                        <TextBlock Grid.Column="1" Text="20.00$" FontWeight="Bold" Margin="10,0,0,0"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#4, 2nd floor, Large Room"/>
                        <TextBlock Grid.Column="1" Text="25.00$" FontWeight="Bold" Margin="10,0,0,0"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#5, 3rd floor, Large Room"/>
                        <TextBlock Grid.Column="1" Text="25.00$" FontWeight="Bold" Margin="10,0,0,0"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="#6, 3rd floor, Small Room"/>
                        <TextBlock Grid.Column="1" Text="20.00$" FontWeight="Bold" Margin="10,0,0,0"/>
                    </Grid>
                </ListBoxItem>
            </ListBox>
        </StackPanel>

        <!-- Guest Information -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Firstname & Lastname -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Firstname" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="John" FontSize="14" Height="35" Padding="8"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Lastname" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="Doe" FontSize="14" Height="35" Padding="8"/>
                </StackPanel>
            </Grid>

            <!-- Email -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Email" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="john12@gmail.com" FontSize="14" Height="35" Padding="8"/>
            </StackPanel>

            <!-- Passport number -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Passport number" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="N00394857" FontSize="14" Height="35" Padding="8"/>
            </StackPanel>

            <!-- Phone number & Country -->
            <Grid Grid.Row="3" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Phone number:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="+195847373" FontSize="14" Height="35" Padding="8"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Country:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="USA" FontSize="14" Height="35" Padding="8"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Confirm Button -->
        <Button Grid.Row="3" 
                Content="Confirm Booking" 
                Background="#A5D6A7" 
                FontSize="16" 
                FontWeight="Bold"
                Height="50"
                Width="200"
                HorizontalAlignment="Right"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>