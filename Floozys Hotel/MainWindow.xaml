<Window
    x:Class="Floozys_Hotel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Floozys_Hotel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Floozys_Hotel.ViewModels"
    Title="MainWindow"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">


    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="#FFEFEFEF">
        <!--  slightly grayed out background  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <!--  making the menu a little wider  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  SIDE-MENU with drop shadow  -->
            <Border
                Grid.RowSpan="2"
                Grid.Column="0"
                Style="{StaticResource MenuDropShadowTheme}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!--  Logo  -->
                    <Image
                        Grid.Row="0"
                        Margin="10"
                        Source="Assets/Logo/Logo_1-1.png" />

                    <!--  Menu  -->
                    <StackPanel Grid.Row="1">
                        <RadioButton
                            Height="50"
                            Command="{Binding BookingOverviewViewCommand}"
                            Content="Booking Overview"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="Black"
                            IsChecked="True"
                            Style="{StaticResource MenuButtonTheme}" />

                        <RadioButton
                            Height="50"
                            Command="{Binding GuestOverviewViewCommand}"
                            Content="Guest Overview"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource MenuButtonTheme}" />

                        <RadioButton
                            Height="50"
                            Command="{Binding RoomOverviewViewCommand}"
                            Content="Room Overview"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource MenuButtonTheme}" />

                        <RadioButton
                            Height="50"
                            Command="{Binding SalesOverviewViewCommand}"
                            Content="Sales Overview"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource MenuButtonTheme}" />

                        <RadioButton
                            Height="50"
                            Command="{Binding GuestPolicyViewCommand}"
                            Content="Guest Policy"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource MenuButtonTheme}" />
                    </StackPanel>
                </Grid>
            </Border>


            <!--  content that is being rendered  -->
            <ContentControl
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="10"
                Content="{Binding CurrentView}" />
        </Grid>
    </Border>

</Window>
