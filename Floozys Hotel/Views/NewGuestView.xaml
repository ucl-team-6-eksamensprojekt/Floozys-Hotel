<Window x:Class="Floozys_Hotel.Views.NewGuestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guest" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding WindowTitle}" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Top" >
            
            <TextBlock Text="Fields marked with * are required." FontStyle="Italic" Foreground="Gray" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100"><Run Text="First name"/><Run Text="*" Foreground="Red"/></TextBlock>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100"><Run Text="Last name"/><Run Text="*" Foreground="Red"/></TextBlock>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100"><Run Text="Phone"/><Run Text="*" Foreground="Red"/></TextBlock>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100"><Run Text="Email"/><Run Text="*" Foreground="Red"/></TextBlock>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100"><Run Text="Country"/><Run Text="*" Foreground="Red"/></TextBlock>
                <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100" Text="Passport number:"/>
                <TextBox Text="{Binding PassportNumber, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            </StackPanel>
            
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>
            
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{Binding SaveButtonText}" Command="{Binding SaveCommand}" IsEnabled="{Binding CanSave}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100"/>
        </StackPanel>
        
    </Grid>
    
</Window>
    