<UserControl
    x:Class="Floozys_Hotel.Views.RoomOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Floozys_Hotel.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewsForms="clr-namespace:Floozys_Hotel.Views.Forms"
    xmlns:vmForms="clr-namespace:Floozys_Hotel.ViewModels.FormsViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />

        <DataTemplate DataType="{x:Type vmForms:RoomFormViewModel}">
            <viewsForms:RoomFormView />
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,10"
            FontSize="30"
            FontWeight="ExtraBold"
            Text="Room Overview" />

        <Button
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            Height="32"
            Margin="0,0,0,5"
            HorizontalAlignment="right"
            VerticalAlignment="Center"
            Command="{Binding OpenCreateRoomCommand}"
            Content="Create Room" />


        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Button
                Grid.Row="0"
                Width="150"
                Height="32"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                Content=" Filter by category" />

            <Border
                Grid.Row="1"
                Padding="0"
                Background="White"
                ClipToBounds="True"
                CornerRadius="10">






                <DataGrid
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    BorderThickness="0"
                    CellStyle="{StaticResource FlatDataGridCellStyle}"
                    ColumnHeaderStyle="{StaticResource FlatDataGridHeaderStyle}"
                    ColumnWidth="*"
                    GridLinesVisibility="None"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    ItemsSource="{Binding Rooms}"
                    Style="{StaticResource FlatDataGridStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding RoomNumber}" Header="Room" />
                        <DataGridTextColumn Binding="{Binding Floor}" Header="Floor" />
                        <DataGridTextColumn Binding="{Binding RoomSize}" Header="Room Size" />
                        <DataGridTextColumn Binding="{Binding Capacity}" Header="Capacity" />
                        <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                        <DataGridTemplateColumn Header="Edit">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Command="{Binding DataContext.OpenEditRoomCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="Edit"
                                        Style="{StaticResource EditButtonStyle}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn Header="Delete">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Command="{Binding DataContext.DeleteRoomCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete"
                                        Style="{StaticResource DeleteButtonStyle}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>


            </Border>
        </Grid>
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="20,0,0,0"
            Padding="16"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="8"
            Visibility="{Binding IsRoomFormOpen, Converter={StaticResource BooleanToVisibility}}">

            <ContentControl Content="{Binding CurrentSideContent}" />
        </Border>
    </Grid>
</UserControl>
