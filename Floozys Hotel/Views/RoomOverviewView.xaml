<UserControl
    x:Class="Floozys_Hotel.Views.RoomOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Floozys_Hotel.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewsForms="clr-namespace:Floozys_Hotel.Views.Forms"
    xmlns:vmForms="clr-namespace:Floozys_Hotel.ViewModels.FormsViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />

        <DataTemplate DataType="{x:Type vmForms:RoomFormViewModel}">
            <viewsForms:RoomFormView />
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,10"
            FontSize="30"
            FontWeight="ExtraBold"
            Text="Room Overview" />

        <Button
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            Height="32"
            Margin="0,0,0,5"
            HorizontalAlignment="right"
            VerticalAlignment="Center"
            Command="{Binding OpenCreateRoomCommand}"
            Content="Create Room" />


        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <ToggleButton Grid.Row="0"
                    x:Name="FilterButton"
                    Content=" Filter by category"
                    Width="150"
                    Height="32"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Left"
                    Command="{Binding ApplyFilterCommand}"/>


            <Popup PlacementTarget="{Binding ElementName=FilterButton}"
                   Placement="Bottom"
                   StaysOpen="False"
                   IsOpen="{Binding IsChecked, ElementName=FilterButton}">
                <Border Background="White"
                        BorderBrush="LightSlateGray"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="10"
                        Width="{Binding ElementName=FilterButton, Path=ActualWidth}">



                    <StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Floor"/>
                            <ComboBox Width="120"
                                      ItemsSource="{Binding Floors}"
                                      SelectedItem="{Binding SelectedFloor}"/>
                        </StackPanel >

                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Room Size"/>
                            <ComboBox Width="120"
                                      ItemsSource="{Binding RoomSizes}"
                                      SelectedItem="{Binding SelectedRoomSize}"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Room Status"/>
                            <ComboBox Width="120"
                                      ItemsSource="{Binding RoomStatuses}"
                                      SelectedItem="{Binding SelectedRoomStatus}"/>
                        </StackPanel>
                        <StackPanel>
                            <Button Content="Apply"
                                    Width="70"
                                    Margin="0,0,8,0"
                                    Command="{Binding ApplyFilterCommand}"/>
                        </StackPanel>
                    </StackPanel>
                    
                </Border>
            </Popup>
                   

            <Button Grid.Row="0"
                    Grid.Column="1"
                    Content="Clear Filter"
                    Width="150"
                    Height="32"
                    Margin="10,0,0,10"
                    HorizontalAlignment="Left"
                    Command="{Binding ClearFilterCommand}"/>

            <Border Grid.Row="1"
                    Grid.ColumnSpan="2"
        CornerRadius="10"
        Background="White"
        Padding="0"
        ClipToBounds="True">
        





            <DataGrid 
                  ItemsSource="{Binding Rooms}"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="None"
                  HeadersVisibility="Column"
                  IsReadOnly="True"
                  Background="Transparent"
                  BorderThickness="0"
                  ColumnWidth="*"
                  Style="{StaticResource FlatDataGridStyle}"
                  ColumnHeaderStyle="{StaticResource FlatDataGridHeaderStyle}"
                  CellStyle="{StaticResource FlatDataGridCellStyle}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Room"
                                    Binding="{Binding RoomNumber}"/>
                <DataGridTextColumn Header="Floor" 
                                    Binding="{Binding Floor}"/>
                <DataGridTextColumn Header="Room Size"
                                    Binding="{Binding RoomSize}"/>
                <DataGridTextColumn Header="Capacity" 
                                    Binding="{Binding Capacity}"/>
                <DataGridTextColumn Header="Status"
                                    Binding="{Binding Status}"/>
                        <DataGridTemplateColumn Header="Edit">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Command="{Binding DataContext.OpenEditRoomCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="Edit"
                                        Style="{StaticResource EditButtonStyle}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn Header="Delete">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        Command="{Binding DataContext.DeleteRoomCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete"
                                        Style="{StaticResource DeleteButtonStyle}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>


            </Border>
        </Grid>
        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="20,0,0,0"
            Padding="16"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="8"
            Visibility="{Binding IsRoomFormOpen, Converter={StaticResource BooleanToVisibility}}">

            <ContentControl Content="{Binding CurrentSideContent}" />
        </Border>
    </Grid>
</UserControl>
